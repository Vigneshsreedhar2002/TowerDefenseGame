<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.judy.controllers.InitialConfigScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <top>
        <StackPane>
            <Label fx:id="initialConfigText" wrapText="true" alignment="CENTER">
                <font>
                    <Font name="Arial Black" size="36"/>
                </font>
            </Label>
        </StackPane>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Label fx:id="nameText" text="Name: "/>
            <HBox alignment="CENTER" spacing="5">
                <TextField fx:id="nameInput" promptText="Enter your name here"/>
                <Button text="Enter" onAction="#onNameButtonClick"/>
            </HBox>

            <Label fx:id="difficultyText" text="Difficulty: "/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="Easy" onAction="#onEasyClick"/>
                <Button text="Medium" onAction="#onMediumClick"/>
                <Button text="Hard" onAction="#onHardClick"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <StackPane>
            <Button text="Start" onAction="#onStartClick"/>
        </StackPane>
    </bottom>
</BorderPane>
