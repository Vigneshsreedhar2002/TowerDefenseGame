<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>


<GridPane id="pane" prefHeight="1280" prefWidth="720" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.judy.controllers.InitialGameScreenController" fx:id="gridPane">

    <VBox fx:id="gameData">
        <Label fx:id="moneyLabel" textFill="white"/>
        <Label fx:id="scoreLabel" textFill="white"/>
        <Label fx:id="levelLabel" textFill="white"/>
    </VBox>

    <VBox fx:id="gameButtons">
        <Button fx:id="towerMenu" onAction="#onShowTowerMenu" text="Store" style="-fx-background-color: F2B23DFF"
        prefWidth="200"/>
        <Button fx:id="inventoryMenu" onAction="#onShowInventoryMenu"
                text="Inventory" style="-fx-background-color: yellow" prefWidth="200"/>
    </VBox>

    <ImageView fx:id="enemyImage"/>
    <VBox fx:id="monumentData" alignment="CENTER">
        <Label fx:id="healthLabel" textFill="white" style="-fx-background-color: green"/>
        <ImageView fx:id="monumentImage"/>
    </VBox>

    <Button fx:id="rotateTop" onAction="#onRotateTop" style="-fx-background-color: yellow"
            prefWidth="120" text="Rotate"/>
    <Button fx:id="rotateBottom" onAction="#onRotateBottom" style="-fx-background-color: yellow"
            prefWidth="120" text="Rotate"/>

</GridPane>