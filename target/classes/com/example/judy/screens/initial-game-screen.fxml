<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>


<GridPane id="pane" prefHeight="1260" prefWidth="700" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.judy.controllers.InitialGameScreenController" fx:id="gridPane" gridLinesVisible="true">

    <VBox fx:id="gameData">
        <Label fx:id="moneyLabel" textFill="white"/>
        <Label fx:id="scoreLabel" textFill="white"/>
        <Label fx:id="levelLabel" textFill="white"/>
        <Label fx:id="enemyHealthLabel" textFill="white"/>
        <Label fx:id="healthLabel" textFill="white"/>
    </VBox>

    <VBox fx:id="gameButtons">
        <Button fx:id="towerMenu" onAction="#onShowTowerMenu"
                text="Store" style="-fx-background-color: orange" prefWidth="200"/>
        <Button fx:id="inventoryMenu" onAction="#onShowInventoryMenu"
                text="Inventory" style="-fx-background-color: yellow" prefWidth="200"/>
        <Button fx:id="startCombat" onAction="#onStartCombat"
                text="Start" style="-fx-background-color: green" prefWidth="200"/>
    </VBox>


</GridPane>