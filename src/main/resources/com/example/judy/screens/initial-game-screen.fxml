<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>


<GridPane id="pane" prefHeight="1280" prefWidth="720" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.judy.controllers.InitialGameScreenController" fx:id="gridPane">

    <VBox fx:id="gameData">
        <Label fx:id="moneyLabel"/>
        <Label fx:id="scoreLabel"/>
        <Label fx:id="levelLabel"/>
    </VBox>

    <VBox fx:id="gameButtons">
        <Button fx:id="towerMenu" onAction="#onShowTowerMenu"/>
    </VBox>

    <ImageView fx:id="enemyImage"/>
    <VBox fx:id="monumentData" alignment="CENTER">
        <Label fx:id="healthLabel"/>
        <ImageView fx:id="monumentImage"/>
    </VBox>

    <HBox fx:id="towers">
        <VBox onMouseClicked="#onCannonClicked">
            <Label fx:id="cannonNumber"/>
            <ImageView fx:id="cannonImage"/>
        </VBox>
        <VBox onMouseClicked="#onCrossbowClicked">
            <Label fx:id="crossbowNumber"/>
            <ImageView fx:id="crossbowImage"/>
        </VBox>
        <VBox onMouseClicked="#onTankClicked">
            <Label fx:id="tankNumber"/>
            <ImageView fx:id="tankImage"/>
        </VBox>
    </HBox>

</GridPane>