<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<AnchorPane id="towerMenu" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.judy.controllers.TowerMenuController" style="-fx-background-color: white;">
    <VBox>
        <HBox fx:id="cannon" onMouseClicked="#onCannonClicked">
            <VBox fx:id="cannonData">
                <Label fx:id="cannonName"/>
                <Text fx:id="cannonDescription"/>
            </VBox>
            <ImageView fx:id="cannonImage"/>
        </HBox>
        <HBox fx:id="crossbow" onMouseClicked="#onCrossbowClicked">
            <VBox fx:id="crossbowData">
                <Label fx:id="crossbowName"/>
                <Text fx:id="crossbowDescription"/>
            </VBox>
            <ImageView fx:id="crossbowImage"/>
        </HBox>
        <HBox fx:id="tank" onMouseClicked="#onTankClicked">
            <VBox fx:id="tankData">
                <Label fx:id="tankName"/>
                <Text fx:id="tankDescription"/>
            </VBox>
            <ImageView fx:id="tankImage"/>
        </HBox>
    </VBox>
</AnchorPane>
